p#notice = notice

h1.header.center.orange-text= hero.name

- if hero.avatar_file_name.url
  .row
    = link_to image_tag(hero.avatar_file_name.thumb.url), hero.avatar_file_name.url
.col.s12
  .col.s6
    p= "Nom : #{hero.name}"
    p= "Points de vie : #{hero.health}"
    p= "Points d'attaque : #{hero.attack}"
    p= "Puissance : #{hero.power}"
  .col.s6
    p= "Vitesse : #{hero.speed}"
    p= "Chance d'Ã©vasion : #{hero.dodge_rate}%"
    p= "Chance de critique : #{hero.critical_rate}%"
    p= "Rang : #{hero.rank}"

.row.center
  = render "heros/partial/wins/wins", wins: hero.wins

  = render "heros/partial/lost/lost", losses: hero.losses

=> link_to 'Edit', edit_hero_path(hero)
